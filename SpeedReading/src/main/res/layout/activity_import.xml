<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <Button
        android:id="@+id/button_import_file"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add text file (*.txt)"
    />

    <Button
        android:id="@+id/button_import_clipboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Paste text from clipboard"
    />

    <Button
        android:id="@+id/button_import_gutenberg_top_100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gutenberg top 100 books (BETA)"
    />

</LinearLayout>